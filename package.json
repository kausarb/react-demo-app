{
  "name": "reactapp",
  "version": "0.1.0",
  "private": true,
  "homepage": "https://github.com/kausarb/react-demo-app/",
  "dependencies": {
    "gh-pages": "^2.0.1",
    "jest-cli": "^23.6.0",
    "react": "^16.7.0",
    "react-bootstrap": "^0.32.4",
    "react-bootstrap-sidebar": "0.0.1",
    "react-dom": "^16.7.0",
    "react-icons": "^3.3.0",
    "react-router-dom": "^4.3.1",
    "react-scripts": "2.1.3"
  },
  "scripts": {
    "start": "set PORT=8000 && react-scripts start",
    "build": "react-scripts build --out dir lib --ignore '**/__tests__/'",
    "test": "jest",
    "eject": "react-scripts eject",
    "lint": "eslint -f html -o report/eslintReport.html --fix --ext .jsx --ignore-path .gitignore",
    "coverage": "jest --verbose --coverage && open ./coverage/lcov-report/index.html"
  },
  "jest": {
    "automock": true,
    "clearMocks": true,
    "cacheDirectory": "./cache",
    "collectCoverage": true,
    "testMatch": [
      "**/*test.js"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json"
    ],
    "modulePathIgnorePatterns": [
      "/node_modules/"
    ],
    "verbose": true,
    "notify": true,
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "moduleNameMapper": {
      "\\.(scss)$": "<rootDir>/node_modules/jest-css-modules"
    },
    "collectCoverageFrom": [
      "<rootDir>/src/__tests__"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "enzyme": "^3.8.0",
    "jest": "^23.6.0",
    "jest-css-modules": "^1.1.0",
    "react-addons-test-utils": "^15.6.2"
  }
}