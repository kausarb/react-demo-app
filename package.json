{
  "name": "reactapp",
  "version": "0.1.0",
  "private": true,
  "homepage": "https://github.com/kausarb/react-demo-app/",
  "dependencies": {
    "gh-pages": "^2.0.1",
    "jest-cli": "^23.6.0",
    "react": "^16.7.0",
    "react-bootstrap": "^0.32.4",
    "react-dom": "^16.7.0",
    "react-scripts": "2.1.3"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "jest --colors --coverage",
    "eject": "react-scripts eject",
	"lint": "eslint --fix --ext .js,.vue --ignore-path .gitignore ."
  },
  "jest": {
	"modulePathIgnorePatterns" : ["/node_modules/"],
	"verbose" : true,
    "collectCoverage": true,
	"notify": true,
    "collectCoverageFrom": [
      "../src/**/*.{js,jsx}"
    ],
	"coverageThreshold" : {
	"global" : {
	"branches" : 80,
	"functions" : 80,
	"lines" : 80,
	"statements" : 80
	}
	}
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "enzyme": "^3.8.0",
    "jest": "^23.6.0",
    "jest-css-modules": "^1.1.0",
    "react-addons-test-utils": "^15.6.2"
  }
}
